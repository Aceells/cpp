                                      cout<<"Sisa Saldo Anda: Rp."<<default_Saldo<<endl;
                                      cout<<"                |-----------| \n";
                                      cout<<"*-------------------------------------------------------------* \n";
                                    break;
                                  }else{
                                      default_Saldo <= nominal;
                                      cout<<"*-------------------------------------------------------------* \n";
