    int default_NomorRekeningAcel = 1212, default_PIN = 666, default_Saldo = 500000, default_BiayaAdmin = 2500;
    int default_NomorRekeningBCA = 12345, default_NomorRekeningLain = 54321, default_NomorVA = 0123456;
